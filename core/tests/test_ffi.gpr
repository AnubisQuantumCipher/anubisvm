-- Test project for AegisVM FFI
--
-- Builds and runs tests for the FFI interface.

project Test_FFI is

   for Source_Dirs use (".", "../src/**", "../src/ffi");
   for Object_Dir use "../obj/tests";
   for Exec_Dir use "../bin";
   for Main use ("test_aegis_ffi.adb");

   package Compiler is
      for Default_Switches ("Ada") use
        ("-gnat2022",
         "-gnatwa",
         "-gnatyO",
         "-gnatVa",
         "-g",
         "-O0",
         "-gnata");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use ("-g");
   end Linker;

end Test_FFI;
