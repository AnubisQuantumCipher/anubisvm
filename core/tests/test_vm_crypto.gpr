-- Test project for VM Crypto and Contract Execution Tests
--
-- Tests the full path from VM execution context through crypto API
-- to SPARK-verified crypto primitives, and end-to-end contract execution.

with "../aegisvm.gpr";

project Test_VM_Crypto is

   for Source_Dirs use (".");
   for Object_Dir use "../obj/tests";
   for Exec_Dir use "../bin";
   for Main use ("test_vm_crypto_vertical.adb", "test_contract_e2e.adb");

   package Compiler is
      for Default_Switches ("Ada") use
        ("-gnat2022",
         "-gnatwa",
         "-gnatyO",
         "-gnatVa",
         "-g",
         "-O0",
         "-gnata");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use ("-g");
   end Linker;

end Test_VM_Crypto;
