with "../anubisvm.gpr";

project Test_Contract_Deployment is

   for Source_Dirs use ("src/integration");
   for Excluded_Source_Files use (
      "test_quantum_vault.adb",
      "test_quantum_vault_multisig.adb",
      "test_private_auction.adb",
      "test_shield_roundtrip.adb",
      "test_local_executor.adb",
      "test_privacy_balance.adb"
   );
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Main use ("test_contract_deployment.adb");

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-gnatn", "-O2");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-E");
   end Binder;

end Test_Contract_Deployment;
